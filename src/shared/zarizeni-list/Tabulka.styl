@import "rupture"

.myTable
  $dark-color = #f9f9f9
  $light-color = #ffffff

  position relative
  display flex
  flex-flow column nowrap
  //justify-content space-between
  align-items center
  margin 0.3rem
  opacity 1
  transition all 1s ease-in
  //font-size 15px
  //font-weight 300
  //line-height 1.5

  &.fetching
    opacity 0.1

  // .myTableRow
  &Row
    display flex
    flex-flow row nowrap
    width 100%
    border-bottom 1px solid #ddd
    &:nth-of-type(even)
      background-color $light-color
    &:nth-of-type(odd)
      background-color $dark-color

    // .myTableRowItem
    &Item
      display flex
      flex-flow row nowrap
      flex-grow 1
      flex-basis 0
      align-self center
      padding 0.3em
      word-break keep-all

  for grow in (1..9)
    & div .uFlexGrow-{grow}
      flex-grow grow

.fetchIndicator
  position absolute
  display flex
  justify-content center
  align-self center
  background transparent
  font-size 20em
  top 20%
  left 15%
  width 70%
  z-index 1060
  opacity 0.6
  &:before
    content "\e026";


