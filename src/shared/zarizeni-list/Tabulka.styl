@import "rupture"

.Table {
  $dark-color = #f2f2f2
  $light-color = #ffffff

  display: flex
  position relative
  flex-flow: column nowrap
  justify-content: space-between
  align-items: center
  border: 1px solid $dark-color
  font-size: 1.2rem
  margin: 0.3rem
  opacity: 1
  font-weight 300
  transition: all 1s ease-in
  //line-height: 1.5

  // .Table-header
  &-header {
    display: flex
    +above(3) {
      font-weight: 700
      background-color: $dark-color
    }
  }

  &-fetching {
    opacity 0.1
  }

  // .Table-row
  &-row {
    width: 100%
    border: solid #fff
    border-top-width: 0px
    border-bottom-width: 0px
    border-left-width: 0.5px
    border-right-width: 0.5px
    &:nth-of-type(even) {
      background-color: $dark-color
    }
    &:nth-of-type(odd) {
      background-color: $light-color
    }
    display: flex
    //font-size: 1.2rem
    flex-flow: row nowrap
    &:nth-of-type(even) {
      background-color: $light-color
    }
    &:nth-of-type(odd) {
      background-color: $dark-color
    }
    // .Table-row-item
    &-item {
      display: flex
      flex-flow: row nowrap
      flex-grow: 1
      flex-basis: 0
      align-self: center
      padding: 0.3em
      word-break: keep-all
      //padding: 0.5em
    }
  }
}

.fetchIndicator {
  position: absolute
  display: flex
  justify-content: center
  align-self: center
  background: transparent
  font-size 20em
  top: 20%
  left: 15%
  width 70%
  z-index: 1060
  opacity: 0.6
  &:before {
    content: "\e026";
  }
}

for grow in (1..9)
  div .u-flex-grow-{grow}
    flex-grow grow

