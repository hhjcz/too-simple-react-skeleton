.myTable .header

  display flex
  flex-flow row nowrap
  width 100%
  position relative
  //justify-content space-between
  align-items center
  //font-size 1.2rem
  font-weight 700
  padding 0
  cursor default

  // .headerItem
  &Item
    flex-grow 1
    align-self center
    padding 0.3em
    word-break keep-all

  .filterIcon
    cursor pointer
    &:before
      content "\e138"

  .columnFilter
    z-index 1050
    display flex
    position absolute
    bottom 3em
    left 0px
    width 100%
    background white
    border 1px solid black
    border-radius 0.2em
    margin 0
    padding 0.5em

